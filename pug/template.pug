doctype html
html
 head
   meta(charset='UTF-8')
   block title&description
   meta(name='viewport', content='width=device-width')
   link(rel='stylesheet', href='https://use.typekit.net/mtg4ahu.css')
   link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
   link(href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet")
   link(rel='stylesheet', href='/css/main.css')
   link(rel='icon', type='image/png', href='images/favicon.png')
 block bodyTag 
 body(id=bodyTag)
  header#header.headerTop
    .logo
      a(href='#')
        img.logo-img(src='./img/logo.png')
        span Assure Studios
    .mobile-menu-toggler
      svg(viewbox='0 0 100 80' width='40' height='40')
        rect(width='100' height='4')
        rect(y='30' width='100' height='4')
        rect(y='60' width='100' height='4')
    nav.nav-bar
      .mobile-close 
       span x
      .nav-link.home-link
       a(href="./")  home
       hr
      .nav-link.about-link
       a(href="about.html") about
       hr
      .nav-link
       a(href="portfolio.html") portfolio
       hr
      .nav-link
       a(href="") blog
       hr
      .nav-link 
       a(href="./contact.html") contact
       hr
  .overlay        

  block content
   block backToTop
   a#backToTop.backToTop
    img(src="./img/angle-up.svg")
   block callToAction
    .container-fluid.callToAction
      .row
       .col-12
        .container
         .row
          .col-sm-12.col-lg-8
           h4 ready to chat about digital marketing!
          .col-sm-12.col-lg-3
           button.chatBtn.commonBtn lets chat
    block newletters
     section.section.subscribe
        .container
          .row.align-items-center
            .col-xl-5.col-sm-12
              h4.sub_title Subscribe To Our Mailing List
              p
                | Sign up for free advice, announcements, and more concerning church SEO, web design and development.
            .col-xl-7.col-sm-12.d-flex
             form.subscribeform(action='' method='post').container.p-0
              .row
               .col-xl-8.col-lg-12
                input(type='email' placeholder='Enter your email address' name='email')
               .col-xl-4.col-lg-12
                button.subBtn.commonBtn(type='submit' name='submit')
                 span Subscribe 

  block footer
   footer.footer
    .container
     .row.justify-content-between
        link(href='//cdn-images.mailchimp.com/embedcode/slim-10_7_dtp.css' rel='stylesheet' type='text/css')
        style(type='text/css').
        #mc_embed_signup
          form#mc-embedded-subscribe-form.validate(action='https://assurestudios.us9.list-manage.com/subscribe/post?u=8350d94f5f6838b1419783e02&id=b398063b79' method='post' name='mc-embedded-subscribe-form' target='_blank' novalidate='')
            #mc_embed_signup_scroll
              label(for='mce-EMAIL') Subscribe To Our Newsletter 
              p Lets talk about web design, development, digital marketing and search engine optimization.
              .dflex
               input#mce-EMAIL.email(type='email' value='' name='EMAIL' placeholder='email address' required='')
               input#mc-embedded-subscribe.button.assure-button(type='submit' value='Subscribe' name='subscribe')

              // real people should not fill this in and expect good things - do not remove this or risk form bot signups
              div(style='position: absolute; left: -5000px;' aria-hidden='true')
                input(type='text' name='b_8350d94f5f6838b1419783e02_b398063b79' tabindex='-1' value='')

              .optionalParent
                .clear.foot
                  p.brandingLogo
                    a(href='http://eepurl.com/hPWYVr' title='Mailchimp - email marketing made easy and fun')
                      img(src='https://eep.io/mc-cdn-images/template_images/branding_logo_text_dark_dtp.svg')
     hr
     .social 
       a(href="#") Facebook 
       a(href="#") Twitter 
       a(href="#") Instagram 
     .copyright 
      a(href="./privacy-policy.html") Privacy Policy
      a(href="./terms-and-conditions.html") Terms and Conditions
      p Â© copyright 2022 by Assure Studios



  block scripts
   script(src="js/main.js")
   script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
   script(src="https://unpkg.com/aos@2.3.1/dist/aos.js")
   script AOS.init();

     